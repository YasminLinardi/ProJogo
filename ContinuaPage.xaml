<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="tantofaz.ContinuaPage"
             Title="Continua Page">

    <ScrollView>
        <Grid>
            <Image Source="menu.png" 
                   Aspect="AspectFill"
                   VerticalOptions="FillAndExpand"
                   HorizontalOptions="FillAndExpand" />

            <StackLayout Grid.Row="1" VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
                <Label Text="Continua na próxima versão..."
                       FontSize="20"
                       TextColor="Yellow"
                       HorizontalOptions="Center"
                       Margin="20" />

                <Button Text="Voltar para o começo"
                        Clicked="OnVoltarClicked"
                        HorizontalOptions="Center"
                        VerticalOptions="End"
                        TextColor="Yellow"
                        Margin="20" />
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>
